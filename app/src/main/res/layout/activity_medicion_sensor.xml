<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MedicionSensor">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/navBArTop"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:background="@color/fondoMenu"
        app:title="Monitoreo Medicion Dron"
        app:titleTextColor="@android:color/white"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/navBArTop"
        app:layout_constraintBottom_toTopOf="@+id/navBarBottom"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/tituloMenuUsuario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/ic_launcher_background"
                android:textSize="24sp"
                android:layout_gravity="center_horizontal" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="97dp"
                android:layout_height="71dp"
                android:layout_marginTop="12dp"
                android:layout_gravity="center_horizontal"
                app:srcCompat="@drawable/sensor" />

            <TextView
                android:id="@+id/txt_fecha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="27dp"
                android:textSize="16sp"
                android:layout_gravity="center_horizontal" />

            <!-- SecciÃ³n de Sensores -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="16dp">

                <!-- Temperatura -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <ImageView
                        android:id="@+id/imagen_temp"
                        android:layout_width="125dp"
                        android:layout_height="110dp"
                        app:srcCompat="@drawable/tempalta" />

                    <TextView
                        android:id="@+id/txt_temp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="24dp"
                        android:text="Temperatura"
                        android:textSize="24sp" />
                </LinearLayout>

                <!-- Humedad -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <ImageView
                        android:id="@+id/imageView11"
                        android:layout_width="125dp"
                        android:layout_height="110dp"
                        app:srcCompat="@drawable/humedad" />

                    <TextView
                        android:id="@+id/txt_humedad"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="24dp"
                        android:text="Humedad"
                        android:textSize="24sp" />
                </LinearLayout>

                <!-- Luminancia -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <ImageView
                        android:id="@+id/imagen_luminancia"
                        android:layout_width="125dp"
                        android:layout_height="110dp"
                        app:srcCompat="@drawable/luzoff" />

                    <TextView
                        android:id="@+id/txt_luminancia"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="24dp"
                        android:text="Luminancia"
                        android:textSize="24sp" />
                </LinearLayout>

                <!-- Iluminancia -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <ImageView
                        android:id="@+id/imagen_iluminancia"
                        android:layout_width="125dp"
                        android:layout_height="110dp"
                        app:srcCompat="@drawable/luzon" />

                    <TextView
                        android:id="@+id/txt_iluminancia"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="24dp"
                        android:text="Iluminancia"
                        android:textSize="24sp" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/navBarBottom"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:background="@color/fondoMenu"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
