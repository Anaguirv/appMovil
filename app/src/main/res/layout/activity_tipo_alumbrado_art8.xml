<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TipoAlumbrado_art8">

    <TextView
        android:id="@+id/titulo_art8"
        android:layout_width="353dp"
        android:layout_height="74dp"
        android:layout_marginTop="24dp"
        android:text=" Alumbrado Publicitario"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="354dp"
        android:layout_height="593dp"
        android:layout_marginTop="16dp"
        android:fillViewport="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.486"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titulo_art8">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_item1"
                android:layout_width="343dp"
                android:layout_height="61dp"
                android:layout_gravity="start"
                android:layout_marginTop="28dp"
                android:text="1.- Luminancia de Avisos y Letreros Luminosos "
                android:textSize="20sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_med1"
                    android:layout_width="221dp"
                    android:layout_height="49dp"
                    android:text="Luminancia máxima " />

                <EditText
                    android:id="@+id/vlr_med1"
                    android:layout_width="6dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:ems="10"
                    android:inputType="numberDecimal" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_med2"
                    android:layout_width="221dp"
                    android:layout_height="49dp"
                    android:text="Ángulo respecto al plano horizontal " />

                <EditText
                    android:id="@+id/vlr_med2"
                    android:layout_width="6dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:ems="10"
                    android:inputType="numberDecimal" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_med3"
                    android:layout_width="221dp"
                    android:layout_height="49dp"
                    android:text="Orientación hacia casas o moradas " />

                <EditText
                    android:id="@+id/vlr_med3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="Si / No"
                    android:inputType="text"
                    android:textAlignment="center" />

            </LinearLayout>
            <TextView
                android:id="@+id/txt_item2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_weight="1"
                android:text="2.- Límites de Intensidad Luminosa en Avisos y Letreros Iluminados
 "
                android:textSize="20sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_med4"
                    android:layout_width="221dp"
                    android:layout_height="wrap_content"
                    android:text="Distribución de intensidad luminosa " />

                <EditText
                    android:id="@+id/vlr_med4"
                    android:layout_width="6dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:inputType="text" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_med5"
                    android:layout_width="221dp"
                    android:layout_height="wrap_content"
                    android:text="Radiancia espectral " />

                <EditText
                    android:id="@+id/vlr_med5"
                    android:layout_width="6dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:inputType="numberDecimal" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_med6"
                    android:layout_width="221dp"
                    android:layout_height="wrap_content"
                    android:text="Iluminados desde arriba hacia abajo " />

                <EditText
                    android:id="@+id/vlr_med6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="Si / No"
                    android:inputType="text"
                    android:textAlignment="center" />
            </LinearLayout>

            <TextView
                android:id="@+id/txt_item3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_weight="1"
                android:text="3.- Condiciones de Cumplimiento para Avisos y Letreros Iluminados"
                android:textSize="20sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_7"
                    android:layout_width="221dp"
                    android:layout_height="wrap_content"
                    android:text="Iluminación de arriba hacia abajo" />

                <EditText
                    android:id="@+id/vlr_med7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="Si / No"
                    android:inputType="text"
                    android:textAlignment="center" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_med8"
                    android:layout_width="221dp"
                    android:layout_height="wrap_content"
                    android:text="Concentración del haz de luz en la superficie a iluminar" />

                <EditText
                    android:id="@+id/vlr_med8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="Si / No"
                    android:inputType="text"
                    android:textAlignment="center" />

            </LinearLayout>

            <TextView
                android:id="@+id/txt_item4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_weight="1"
                android:text="4.- Límite Horario para Avisos y Letreros "
                android:textSize="20sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_med9"
                    android:layout_width="221dp"
                    android:layout_height="wrap_content"
                    android:text="Apagado entre 00:00 horas y 07:00 horas" />

                <EditText
                    android:id="@+id/vlr_med9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="Si / No"
                    android:inputType="text"
                    android:textAlignment="center" />

            </LinearLayout>

            <TextView
                android:id="@+id/txt_item5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_weight="1"
                android:text="5.- Observaciones"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/vlr_observacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:gravity="start|top"
                android:inputType="textMultiLine" />

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/btn_regsitrarMedicion"
        android:layout_width="229dp"
        android:layout_height="54dp"
        android:layout_marginTop="16dp"
        android:text="@string/btn_registrar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollView2" />

</androidx.constraintlayout.widget.ConstraintLayout>